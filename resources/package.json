{
  "name": "draftone",
  "version": "1.0.0",
  "description": "A minimalist Markdown editor inspired by iA Writer.",
  "author": "Foundry",
  "license": "MIT",
  "private": true,
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "build:electron": "node node_modules/typescript/bin/tsc && node node_modules/vite/bin/vite.js build && node node_modules/typescript/bin/tsc -p tsconfig.electron.json",
    "package": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged .",
    "package:win": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged . --win",
    "package:mac": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged . --mac",
    "package:linux": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged . --linux",
    "package:all": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged . --win --mac --linux",
    "package:dir": "npm run build:electron && node_modules/.bin/electron-builder.cmd --prepackaged . --dir"
  },
  "build": {
    "appId": "Foundry.DraftOne",
    "productName": "DraftOne",
    "copyright": "Copyright \u00a9 2024",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json",
      "!node_modules/**/*",
      "!src/**/*",
      "!electron/**/*",
      "!*.ts",
      "!*.tsx",
      "!tsconfig*.json",
      "!vite.config.*"
    ],
    "extraMetadata": {
      "main": "dist-electron/electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}-Setup.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DraftOne",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-Portable.${ext}"
    }
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/view": "^6.39.4",
    "@lezer/highlight": "^1.2.3",
    "@uiw/codemirror-themes": "^4.25.4",
    "@uiw/react-codemirror": "^4.25.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
